<head>
    <meta charset="UTF-8">
    <title>test1</title>
    <script src="js/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script src="js/jquery.autosize.js" type="text/javascript"></script>
    <script src="js/jquery.hashtags.js" type="text/javascript"></script>
</head>
<body>
    <% unless @userid.nil? %>
        <a href="/bookparty/logout">logout...</a>
        <h2> <%= @username %>님의 검색 페이지입니다 </h2>
        <a href="/bookparty/storebookinfo"><input type = "button" value="storebookinfo"></a>
    <% else %>
        <h2> <%= @alertNonUser %> </h2>
    <% end %>
    
    <!-- 검색 bar -->
    
    <!-- 검색 parameter를 tagresult로 날려준다 -->
    <form action="/bookparty/tagresult" method="POST" class="c-form">
        <input type="text" class="c-form-search" name ="tagSearch" placeholder="해시태그 검색" required>
        <button type="submit" class="c-form-submit">태그 검색</button>
    </form>
    
</body>
<script type="text/javascript">
    $(document).ready(function() {
    $("textarea").hashtags();
    });
    
</script>

