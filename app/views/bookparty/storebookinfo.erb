<head>
  <meta charset="UTF-8">
  <title>판매</title>
</head>
<body>
  <form method="post" action="/bookparty/storebookinfo_complete" enctype="multipart/form-data">
    <input type = "hidden" name = "user_id" value = "<%= session["user_id"] %>" >
    <input type = "hidden" name = "sellerip" value = "<%= request.remote_ip %>" >
      <div class="input-field col s3" style ="width: 25%; margin-left : 500px">
        <input id="first_name" name = "booktitle" type="text" class="validate">
        <label for="first_name">책 제목</label>
      </div>
      <div class="input-field col s3" style ="width: 25%; margin-left : 500px">
        <input id="last_name" type="text" name = "bookauthor" class="validate">
        <label for="last_name">책 저자</label>
      </div>
      <div class="input-field col s3" style ="width: 25%; margin-left : 500px">
        <input id="last_name" type="text" name = "bookpublisher" class="validate">
        <label for="last_name">출판사</label>
      </div>
      <div class="input-field col s3" style ="width: 25%; margin-left : 500px">
        <input id="first_name" name = "bookprice" type="text" class="validate">
        <label for="first_name">시작 가격</label>
      </div>
      <div class="input-field col s3" style ="width: 25%; margin-left : 500px">
        <input id="last_name" type="text" name = "nowbookprice" class="validate">
        <label for="last_name">즉구 가격</label>
      </div>
    </div>
    
    <div class = "sellbook-input" style ="margin-left: 500px;">
      <p>
      <h5>책상태 </h5>
        <input name = "bookstate" type="radio" value="1" id="test1" />
        <label for="test1">상</label>
      
        <input name = "bookstate" type="radio" value="2" id="test2" />
        <label for="test2">중</label>
      
        <input name = "bookstate" type="radio" value="3" id="test3"  />
        <label for="test3">하</label>
      </p>
      
      <div class="file-field input-field" style ="width: 50%;">
        <div class="btn">
          <span>책 사진</span>
          <input type="file" name = "image_file">
        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text">
        </div>
      </div>
      
      <div style ="width: 25%;">
        경매종료일  
        <input type="text" placeholder="경매 종료 날짜를 선택하세요" class='datepicker' name = "booksellterm_date">
        <input type="text" placeholder="경매 종로 시간을 선택하세요" id="clock" name = "booksellterm_time"><br><br>
        <div class = "hashtag-parent" >
          <div class="hashtag-nameing" > 해시태그  </div> 
          <div class="hashtag-input" >
            <input id="tags_1" type = "text" class="tags" name = "hashtag"> 
          </div>
        </div>
      </div>      
    </div>
    <button style ="margin-left: 600px; margin-top: 30px"class="btn waves-effect waves-light" type="submit" name="action">책 등록하기
      <i class="material-icons right">send</i>
    </button>
  </form>
</body>

<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker({orientation: "top right", autoclose: true});
    
    $('#clock').clockpicker({
      autoclose: true
    });
  });
  
  $(function() {
      $('#tags_1').tagsInput();
  });
</script>
 